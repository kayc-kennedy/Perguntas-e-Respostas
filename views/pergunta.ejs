<body>
    <%- include("partials/navbar.ejs") %>

    <div class="container">
        
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>

        <form method="POST" action="/responder"><!-- Formulario de resposta -->
            <h3>Responda</h3>
            <label>Resposta: </label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" value="<%=pergunta.id %>" name="pergunta">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>

        <% respostas.forEach(respostas =>{%><!-- Apresentendo as respostas na tela -->
            <br>
            <div class= "card">
                <div class= "card-body">
                    <p><%= respostas.corpo %></p>
                </div>
               
            </div>

        <% }) %> 
    </div>
</body>
<%- include("partials/footer.ejs") %>

